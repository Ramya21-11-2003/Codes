package main;
import java.util.*;
public class StringRev {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner scan = new Scanner(System.in);
		System.out.println("enter string");
		String a = scan.nextLine();
		int l = a.length();
		String rev="";
		for(int i=l-1;i>=0;i--)
		{
		  rev = rev +a.charAt(i);  
		}
		System.out.println(rev);
	}
}
